---
import Image from "astro/components/Image.astro";
const {src, alt} = Astro.props;
---
<div class="imgbox">
    <Image src={src} alt={alt} class="center-fit" width={700}/>
</div>
<style>
        .imgbox {
            display: grid;
        }
        .center-fit {
            max-width: 100%;
            height: auto;
            aspect-ratio: auto;
        }
</style>